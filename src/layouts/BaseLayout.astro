---
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import "@/styles.css"; // âœ… Import CSS via ESM so Tailwind is processed

const { title = "Logic in Philosophy", lang = "en", dir = "ltr" } = Astro.props;
const base = import.meta.env.BASE_URL;
---
<!DOCTYPE html>
<html lang={lang} dir={dir}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>

    <!-- Favicon (using site logo for now) -->
    <link rel="icon" href={`${base}logo.jpg`} type="image/jpeg" />
  </head>
  <body class="flex flex-col min-h-screen">
    <Header lang={lang} />
    <main id="main" class="flex-1 container py-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>