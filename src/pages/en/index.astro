---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Prose from "@/components/Prose.astro";

const base = import.meta.env.BASE_URL;
---
<BaseLayout title="Logic in Philosophy" lang="en" dir="ltr">
  <h1>Welcome to Logic in Philosophy</h1>
  <Prose>
    <p><strong>Logic in Philosophy</strong> is a research initiative at Tel Aviv University exploring logic, language, and conceptual engineering.</p>
    <p>
      Use the navigation above or these quick links:
      <ul>
        <li><a href={`${base}en/ruth-manor/`}>Ruth Manor Lecture Series</a></li>
        <li><a href={`${base}en/actah/`}>ACTAH</a></li>
        <li><a href={`${base}en/events/`}>Events</a></li>
      </ul>
    </p>
  </Prose>
</BaseLayout>
