---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Prose from "@/components/Prose.astro";
import BibliographyList from "@/components/BibliographyList.astro";
import PhotoGrid from "@/components/PhotoGrid.astro";

import EnBio from "@/content/ruth-manor/bio/en.md";
import biblio from "@/content/ruth-manor/bibliography.json";

const photos = [
  "ruth-manor/ruth-manor1.jpg",
  "ruth-manor/ruth-manor2.jpg"
];
---
<BaseLayout title="Ruth Manor — Biography & Bibliography" lang="en" dir="ltr">
  <h1>Ruth Manor — Biography & Bibliography</h1>
  <Prose>
    <EnBio.Content />
  </Prose>

  <h2 class="mt-10 mb-4 text-xl font-semibold">Photos</h2>
  <PhotoGrid paths={photos} />

  <h2 class="mt-10 mb-4 text-xl font-semibold">Selected Bibliography</h2>
  <BibliographyList items={biblio} />
</BaseLayout>
