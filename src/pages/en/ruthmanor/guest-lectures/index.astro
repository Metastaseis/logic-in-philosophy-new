---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Prose from "@/components/Prose.astro";
import { getCollection } from "astro:content";

const items = (await getCollection("ruthLectures", ({ data }) => data.lang === "en"))
  .sort((a, b) => (a.data.date < b.data.date ? 1 : -1));
---
<BaseLayout title="Guest Lectures — Ruth Manor" lang="en" dir="ltr">
  <h1>Guest Lectures</h1>
  <Prose>
    <ul>
      {items.map((e) => (
        <li>
          <a href={`/en/ruth-manor/guest-lectures/${e.slug}/`} class="underline">{e.data.title}</a>
          {" — "}
          <time datetime={e.data.date}>{e.data.date}</time>
          {e.data.speakers.length > 0 ? ` — ${e.data.speakers.join(", ")}` : null}
        </li>
      ))}
    </ul>
  </Prose>
</BaseLayout>
