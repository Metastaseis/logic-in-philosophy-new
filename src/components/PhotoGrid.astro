---
/**
 * Props:
 * - paths: string[]    // e.g., ["ruth-manor/photos/sample1.jpg", ...]
 * - baseAware: boolean // default true; prepends BASE_URL if true
 */
const { paths = [], baseAware = true } = Astro.props;
const base = import.meta.env.BASE_URL;
const urlFor = (p: string) => (baseAware ? `${base}${p}` : p);
---
<div class="grid grid-cols-2 md:grid-cols-3 gap-4">
  {paths.map((p) => (
    <figure class="border rounded overflow-hidden">
      <img src={urlFor(p)} alt="Ruth Manor photo" class="w-full h-auto block" loading="lazy" />
    </figure>
  ))}
</div>